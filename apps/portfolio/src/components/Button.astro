---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  /**
   * @default 'button'
   */
  type?: NonNullable<HTMLAttributes<'button'>['type']>;
}

const { type = 'button', class: className, ...restProps } = Astro.props;
---

<button {type} class={className} {...restProps}>
  <slot />
</button>
