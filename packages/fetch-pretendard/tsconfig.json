{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"strict": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true,

		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,

		"incremental": true,

		"outDir": "./dist"
	}
}
